%token CTE_ENTERA
%token CTE_REAL
%token CTE_CHAR
%token CTE_STRING
%token INTEGER
%token REAL
%token CHARACTER
%token DIM
%token AS
%token IDENT

%%

programa
		: listaDeclaraciones
		; { System.out.println("Programa reconocido"); }  

listaDeclaraciones
		: listaDeclaraciones declaracion 
		| declaracion 
		;

declaracion
		: DIM IDENT AS tipo ';' 
		; { System.out.println("Declaración de variable"); }

ident
		: IDENT
		;

tipo
		: REAL 
		| CHARACTER 
		| INTEGER 
		;

%%

Lexico lex;

Parser (Lexico lex){
	this.lex=lex;	
}

void yyerror(String s){
	System.out.println("Syntax error");
}

int yylex(){

	try{
	
	int token =lex.yylex();
	yylval=lex.lexeme();
	
		return token;
		
	}catch(Exception e){
		return -1;
	}
}